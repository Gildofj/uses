---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Content from "../components/Content.astro";

type Props = CollectionEntry<"posts">["data"];

const { title, description, heroImage } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />
    <main class="pt-[76px]">
      <Content className="pt-6">
        <div class="mb-8">
          {
            heroImage && (
              <Image
                class="border border-slate-300 dark:border-zinc-700 rounded-xl"
                width={1020}
                height={510}
                src={heroImage}
                alt="thumbnail image"
              />
            )
          }
        </div>
        <h1 class="text-3xl font-fira-code my-1">{title}</h1>
        <div>{description}</div>
        <hr class="border-top border-zinc-400 my-4" />
        <slot />
        <span
          class="underline underline-offset-2 hover:text-purple-500 decoration-purple-500 text-2xl"
        ></span>
      </Content>
    </main>
    <Footer />
  </body>
</html>
