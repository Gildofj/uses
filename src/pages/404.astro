---
import { IoChevronForward } from "react-icons/io5/index.js";
import BaseHead from "../components/BaseHead.astro";
import Body from "../components/Body.astro";
import Content from "../components/Content.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Masthead from "../components/Masthead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <Body>
    <Header title={SITE_TITLE} />
    <main class="pt-[76px]">
      <Masthead />
      <Content>
        <section>
          <h1 class="text-3xl text-center font-fira-code mt-12 mb-8">
            Oops, not found
          </h1>
          <div class="text-center py-4">
            <a
              href="/"
              class="inline-flex items-center gap-2 underline underline-offset-2 decoration-purple-500"
            >
              Va para p√°gina principal <IoChevronForward /></a
            >
          </div>
        </section>
      </Content>
    </main>
    <Footer />
  </Body>
</html>
